    <!-- LLog Component Setting -->
    <log> 
        <!-- log 파일이 저장될 기본 directory를 설정한다. -->
        <base-target> #home/logs </base-target> 
      
        <!-- log 파일 생성 주기를 원하는 시간으로 설정한다. 1시간 or 12시간 or 24시간 단위로 설정 가능하다. -->
        <file-date>12</file-date> 
      
        <!-- 각 logger 별 Setting -->
        <!-- DevOn Core에서는 기본적으로 devon, sys, err, warn, info, debug, dbwrap, security, trace의 9가지 logger을 제공한다. 
            새로운 Logger을 정의하여 사용할 수 있다. -->
          
        <logger name="devon"> 
            <!-- 해당 Logger를 통한 로깅 여부 설정 --> 
            <enabled>true</enabled>       
            <!-- appender의 사용여부 설정 -->
            <!-- devon의 경우  default로 [file : true, console : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file">false</appender-ref> 
            <appender-ref name="console">true</appender-ref> 
        </logger> 
      
        <logger name="sys"> 
            <enabled>true</enabled> 
            <!-- sys의 경우  default로 [file : true, console : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file">false</appender-ref> 
            <appender-ref name="console">true</appender-ref> 
        </logger> 
      
        <logger name="err"> 
            <enabled>true</enabled>       
            <!-- err의 경우  default로 [file : true, console : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file">false</appender-ref> 
            <appender-ref name="console">true</appender-ref> 
        </logger> 
      
        <logger name="warn"> 
            <enabled>true</enabled> 
            <!-- warn의 경우  default로 [file : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file">false</appender-ref> 
        </logger> 
      
        <logger name="info"> 
            <enabled>true</enabled> 
            <!-- info의 경우  default로 [file : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file">false</appender-ref> 
            <appender-ref name="console">true</appender-ref> 
        </logger> 
      
        <logger name="debug"> 
            <enabled>true</enabled>  
            <!-- debug의 경우  default로 [file : true, console : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file">false</appender-ref> 
            <appender-ref name="console"> true </appender-ref> 
        </logger> 
      
        <logger name="dbwrap"> 
            <enabled>true</enabled> 
            <!-- dbwrap의 경우  default로 [file : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file"> false </appender-ref> 
        </logger>  
         
        <logger name="security"> 
            <enabled>true</enabled> 
            <!-- security의 경우  default로 [file : true, console : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file"> false </appender-ref> 
            <appender-ref name="console"> true </appender-ref> 
        </logger> 
          
        <!-- trace level [since 4.5.0]-->
        <logger name="trace">  
            <enabled>false</enabled> 
            <!-- trace의 경우  default로 [file : true, console : true]를 설정한 devon-core.xml를 배포한다. -->
            <appender-ref name="file"> false </appender-ref> 
            <appender-ref name="console"> true </appender-ref> 
        </logger> 
  
        <!-- 각 appender 별 Setting -->
        <!-- DevOn Core에서 기본적으로 제공하는 appender는 
            devon.core.log.appender.LFileAppender, devon.core.log.appender.LFileSizeAppender, devon.core.log.appender.LConsoleAppender이다.  
       fomatter의 경우 default로 devon.core.log.LLogFileFormatter가 사용되며 format변경 시 구현한 클래스를 formatter에 설정하여 사용한다. -->         
        <appender name="file"> 
            <!-- file에 로깅을 하는 기본 appender -->
            <class>devon.core.log.appender.LFileAppender</class>       
            <!-- 출력시 format -->
            <formatter>devon.core.log.LLogFileFormatter</formatter> 
            <target>#home/logs</target>
        </appender> 
      
        <appender name="filesize"> 
            <!-- 지정한 크기만큼의 file에 로깅을 하는 기본 appender -->
            <class>devon.core.log.appender.LFileSizeAppender</class> 
            <formatter>devon.core.log.LLogFileFormatter</formatter> 
            <size>10kb</size> 
        </appender> 
      
        <appender name="console"> 
            <!-- 표준 출력을 통해 console에 로깅을 하는 기본 appender -->
            <class>devon.core.log.appender.LConsoleAppender</class> 
        </appender> 
      
        <appender name="errconsole"> 
            <class>devon.core.log.appender.LConsoleAppender</class> 
            <!-- 표준 에러을 통해 console에 로깅할 경우 -->
            <target>err</target> 
        </appender>     
    </log>   
</core>